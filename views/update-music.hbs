<h1 class="juzhong2">Update</h1>

{{#if errorMessages.length}}
  <p>Couldn't update the music because:</p>
  <ul>
    {{#each errorMessages}}
      <li>{{this}}</li>
    {{/each}}
  </ul>
{{/if}}

<form action="/musics/update" method="post">
  <div class="juzhong">
    <div>
      Title:
      <input type="text" name="title" value="{{title}}" />
    </div>

    <div>
      Grade:
      <input type="number" name="grade" value="{{grade}}" />
    </div>

    <input type="submit" value="update" />
  </div>

</form>