<h1 class="juzhong2">Delete</h1>

{{#if errorMessages.length}}
  <p>Couldn't delete the music because:</p>
  <ul>
    {{#each errorMessages}}
      <li>{{this}}</li>
    {{/each}}
  </ul>
{{/if}}

<form action="/musics/delete" method="post">

  <div class="juzhong">
    <div>
      Title:
      <input type="text" name="title" value="{{title}}" />
    </div>

    <input type="submit" value="delete" />
  </div>

</form>